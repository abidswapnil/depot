<div id="<%= dom_id cart %>" class="bg-white rounded p-6">
  <h2 class="font-bold text-lg mb-3">Your Cart</h2>
  <table class="table-auto">
    <%= render cart.line_items %>
    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2" colspan="3">Total:</th>
        <td class="text-right pt-2 font-bold border-t-2 border-black">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>
  <div class="flex gap-4 mt-4">
    <%= button_to 'Empty', cart, method: :delete, class: 'rounded-lg py-2 px-3 text-white font-semibold bg-green-700' %>
    <%= button_to 'Checkout', new_order_path, method: :get,
                  class: 'rounded-lg py-2 px-3 text-white font-semibold bg-blue-700' %>
  </div>
</div>